# Production Environment Variables for keepshot.xyz

# PostgreSQL Database
POSTGRES_USER=keepshot_prod
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=keepshot_prod

# Database URL (auto-constructed from above)
DATABASE_URL=postgresql://keepshot_prod:CHANGE_THIS_SECURE_PASSWORD@db:5432/keepshot_prod

# OpenAI API
OPENAI_API_KEY=sk-your-production-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS - Add your frontend domains
ALLOWED_ORIGINS=https://keepshot.xyz,https://app.keepshot.xyz,https://api.keepshot.xyz

# Monitoring Configuration
DEFAULT_CHECK_INTERVAL=60
MAX_CONCURRENT_CHECKS=20

# Storage Configuration
STORAGE_PATH=/app/storage
MAX_FILE_SIZE=100

# Optional: JWT Authentication
# JWT_SECRET=your-very-secure-random-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION=86400

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000

# Optional: Webhook Notifications
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify
# WEBHOOK_SECRET=your-webhook-secret
